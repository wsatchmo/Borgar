<div class="container">
    <!--BURGERS THAT AIN'T BEEN EATEN-->
    <div class="row">
        <div class="col m5">
            <div class="card">
                <h1 style="margin-top: 1.95rem; text-align: center">BORGARZ</h1>

                <h3 style="text-align: center">Eet Dem Burgz</h3>
                <table style="margin-bottom: 80px;">
                    <thead>
                        <th>Borgar</th>
                        <th>ID No.</th>
                        <th style="text-align: center">Eet It!</th>
                    </thead>
                    <tbody>
                        {{#each burgers}}
                            {{#unless this.devoured}}
                            <tr>
                                <td>
                                    {{this.burger_name}} 
                                </td>
                                <td style="text-align: center">
                                    {{this.id}}
                                </td>
                                <td>
                                    <button data-id="{{id}}" class="eat_burg btn yellow accent-4" type="submit">MONCH!</button>
                                </td>
                            </tr>
                            {{/unless}}
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>

<!--BURGERS THAT HAVE BEEN EATEN-->
        
        <div class="col m6 offset-m1">
            <div class="card">
                <h3 style="text-align: center">Done Been Eeted</h3>
                <table>
                    <thead>
                        <th>Borgar</th>
                        <th>ID No.</th>
                        <th>Ated it...</th>
                    </thead>
                    <tbody>
                        {{#each burgers}}
                            {{#if this.devoured}}
                            <tr>
                                <td>
                                    {{this.burger_name}} 
                                </td>
                                <td>
                                    {{this.id}}
                                </td>
                                <td>
                                    <i class="material-icons" style="color: red; font-size: 30px;">check</i>
                                </td>
                            </tr>
                            {{/if}}
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>

        <!--ADDIN' BURGERS-->
        <div class="col m12 card" style="margin-bottom: 80px; padding-bottom: 20px">
            <h4> Add Borgar </h3>
            <form class="create-update-form"  action="burgers/create" method="POST">

                <div class="form-group">
                    <input class="form-control input-lg" placeholder="Your Borgar Name" type="text" name="burg_name" rows="3"> </input>
                </div>

                <button class="btn yellow accent-4 right" type="submit">Add Borgar!</button>
            </form>
        </div>
        </div>
</div>

