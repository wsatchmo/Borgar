<div class="container">
    <!--BURGERS THAT AIN'T BEEN EATEN-->
    <div class="row">
        <div class="col m5">
            <div class="card">
                <h1 style="margin-top: 1.95rem; text-align: center">BORGARZ</h1>

                <h3 style="text-align: center">Eet Dem Burgz</h3>
                <table style="margin-bottom: 80px;">
                    <thead>
                        <th>Borgar</th>
                        <th>ID No.</th>
                        <th style="text-align: center">Eet It!</th>
                    </thead>
                    <tbody>
                        {{#each burgers}}
                            {{#unless this.devoured}}
                            <tr>
                                <td>
                                    {{this.burger_name}} 
                                </td>
                                <td style="text-align: center">
                                    {{this.id}}
                                </td>
                                <td>
                                    <button data-id="{{id}}" class="eat_burg btn yellow accent-4" type="submit">MONCH!</button>
                                </td>
                            </tr>
                            {{/unless}}
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>

    <script type="text/javascript"> //Script for sending PUT request
        $(".eat_burg").on("click", function(event) {
            var id = $(this).data("id");
            console.log("Button pressed");

            // Send the PUT request.
            $.ajax("/burgers/update/" + id, {
            type: "PUT"
            }).then(
            function() {
                console.log("changed devoured state to true");
                // Reload the page to get the updated list
                location.reload();
            });
        });
    </script>

<!--BURGERS THAT HAVE BEEN EATEN-->
        
        <div class="col m6 offset-m1">
